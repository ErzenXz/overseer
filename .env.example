# MyBot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=production
PORT=3000
BASE_URL=http://localhost:3000

# ===========================================
# SECURITY (Generate strong random strings!)
# ===========================================
# Generate with: openssl rand -hex 32
SESSION_SECRET=your-super-secret-session-key-change-this
ENCRYPTION_KEY=your-encryption-key-for-api-keys-change-this

# ===========================================
# DATABASE
# ===========================================
DATABASE_PATH=./data/mybot.db

# ===========================================
# DEFAULT ADMIN CREDENTIALS (First-time setup)
# ===========================================
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=changeme123

# ===========================================
# LLM PROVIDERS (Optional - can be added via Web UI)
# ===========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# ===========================================
# TELEGRAM BOT
# ===========================================
TELEGRAM_BOT_TOKEN=
# Comma-separated list of allowed Telegram user IDs (leave empty to allow all)
TELEGRAM_ALLOWED_USERS=
# Webhook settings (optional - for production)
TELEGRAM_WEBHOOK_DOMAIN=
TELEGRAM_WEBHOOK_SECRET=

# ===========================================
# DISCORD BOT
# ===========================================
# Get these from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=
# Comma-separated list of allowed Discord user IDs (leave empty to allow all)
DISCORD_ALLOWED_USERS=
# Comma-separated list of allowed Discord guild/server IDs (leave empty to allow all)
DISCORD_ALLOWED_GUILDS=

# ===========================================
# AGENT SETTINGS
# ===========================================
AGENT_MAX_RETRIES=3
AGENT_MAX_STEPS=25
AGENT_DEFAULT_MODEL=gpt-4o
AGENT_TIMEOUT_MS=120000

# ===========================================
# TOOL SETTINGS
# ===========================================
ALLOW_SHELL_COMMANDS=true
REQUIRE_CONFIRMATION_FOR_DESTRUCTIVE=true
SHELL_TIMEOUT_MS=30000
MAX_FILE_SIZE_MB=10
